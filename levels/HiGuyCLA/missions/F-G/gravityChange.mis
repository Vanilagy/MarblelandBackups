$normalGrav = 0;
 
new AudioProfile(ThreeFolderLoopSfx)
{
   filename    = "~/data/sound/threefolder_gravWarn.wav";
   description = ClientAudioLooping2d;
   preload = true;
};
 
package pqwhereswag
{
    function onMissionReset()
        {
                Parent::onMissionReset();
                $normalGrav = 0;
                cancel($ThreeFolderLoop);
                flipDatGravity();
        }
       
        function GameConnection::onClientLeaveGame(%this)
        {
                Parent::onClientLeaveGame(%this);
                cancel($ThreeFolderLoop);
                deactivatePackage(pqwhereswag);
        }
};
activatePackage(pqwhereswag);
 
function flipDatGravity()
{
        cancel($ThreeFolderLoop);
        $normalGrav = !$normalGrav;
        if ($normalGrav)
                setGravityDir("1 0 0 0 -1 0 0 0 -1", true);
        else
                setGravityDir(VectorOrthoBasis("1 0 0 0"), true);
        alxStop($ThreeFolderAudio);
        $ThreeFolderAudio = alxPlay(ThreeFolderLoopSfx);
        $ThreeFolderLoop = schedule(5000, 0, flipDatGravity);
}